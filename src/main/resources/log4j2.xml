<?xml version="1.0" encoding="UTF-8" ?>
<!-- Specify the refresh internal in seconds. -->
<Configuration monitorInterval="60">
    <Properties>
        <Property name="cas-oppija.log.level">${env:CAS_OPPIJA_LOG_LEVEL:-info}</Property>
    </Properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %p [%c] - &lt;%m&gt;%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!--
        <AsyncLogger name="org.springframework.beans.factory" level="trace"/>
        -->
        <AsyncLogger name="org.springframework.webflow.engine" level="trace"/>
        <AsyncLogger name="org.apereo.cas" level="debug"/>
        <AsyncLogger name="org.pac4j.saml" level="debug"/>
        <AsyncLogger name="fi.vm" level="debug"/>
        <AsyncRoot level="info">
            <AppenderRef ref="console"/>
        </AsyncRoot>
    </Loggers>
</Configuration>
